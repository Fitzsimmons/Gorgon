require "rubygems"
require 'gorgon/originator'
require 'gorgon/listener'
require 'gorgon/worker'

def start
  o = Originator.new
  o.originate
end

def listen
  l = Listener.new
  l.listen
end

def work
  config_path = ENV["GORGON_CONFIG_PATH"]

  w = Worker.build(config_path)
  w.work
end

def usage
  #print instructions on how to use gorgon
end

case ARGV[0]
when nil
  start
when "start"
  start
when "listen"
  listen
when "work"
  work
else
  usage
end