require "rubygems"
require 'gorgon/originator'
require 'gorgon/listener'
require 'gorgon/worker_spawner'

def start
  o = Originator.new
  o.originate
end

def listen
  l = Listener.new
  l.listen
end

def spawn_workers
  config_path = ENV["GORGON_CONFIG_PATH"]
  worker_slots = ENV["GORGON_WORKER_SLOTS"].to_i

  spawner = WorkerSpawner.build(config_path)
  spawner.spawn worker_slots
end

def usage
  #print instructions on how to use gorgon
end

case ARGV[0]
when nil
  start
when "start"
  start
when "listen"
  listen
when "spawn_workers"
  spawn_workers
else
  usage
end